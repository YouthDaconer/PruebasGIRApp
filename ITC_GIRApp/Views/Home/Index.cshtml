<body class="bg-primary">
  <link href="~/styles/pages/login.css" rel="stylesheet" />
  <div class="p-4">

    <!-- #region Login -->
    @{
      await Html.RenderPartialAsync("~/Views/Home/Signin.cshtml");
    }
    <!-- #endregion -->
    <!-- #region Registro -->
    @{ await Html.RenderPartialAsync("~/Views/Home/Signup.cshtml"); }
    <!-- #endregion -->
    <!-- #region Restablecer ContraseÃ±a -->
    @{ await Html.RenderPartialAsync("~/Views/Home/ForgotPassword.cshtml"); }
    <!-- #endregion -->

  </div>

  <!-- #region Modales -->
  <div id="divModalMsg" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header modal-header-primary">
          <h5 class="modal-title" id="h5ModalTitle"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="divModalBody">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="divModalLoading" tabindex="-1" role="dialog" aria-labelledby="loadMeLabel">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-body text-center">
          <img src="~/images/loading.gif" width="50" />
          <div class="loader-txt" id="divLoaderText">
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- #endregion -->
  <!-- #region Scripts -->
  <script type="text/javascript" src="~/js/login.js?v=009"></script>
  <!-- #endregion -->
</body>