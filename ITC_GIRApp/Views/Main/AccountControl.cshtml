<div class="card shadow optionMenu" id="divAccountControl" style="display:none;">

  <a href="#divTabAccountControl" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardTable">
    <h6 class="m-0 font-weight-bold text-primary">Usuarios</h6>
  </a>

  <div class="collapse show" id="divTabAccountControl">
    <div class="card-body">

      <div class="row">

        <div class="col-xl-12 col-md-12">

          <div class="table-responsive user-select-text" id="divTableUsers" style="font-size:85% !important;"></div>

        </div>
      </div>
    </div>
  </div>

</div>

<div class="modal fade" id="changeRoleModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Actualizar Usuario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="frmChangeRole" class="form-control-user" autocomplete="off" action="">
          <div class="form-row">
            <div class="form-group col-xl-6 mb-6">
              <label for="txtCreateUser-contactName">Nombre del contacto</label>
              <input type="text" class="form-control" id="txtCreateUser-contactName" name="contactName">
              <div class="invalid-feedback"></div>
            </div>

            <div class="form-group col-xl-6 mb-6">
              <label for="txtChangeRole-CreateUser-mobile">N&uacute;mero de celular</label>
              <input type="number" class="form-control" id="txtChangeRole-CreateUser-mobile" name="mobile">
              <div class="invalid-feedback"></div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-xl-12 mb-12">
              <label>Region</label>
              <select id="slcChangeRole-Region" class="form-control" name="region">
                <option disabled>Seleccione</option>
              </select>
              <div class="invalid-feedback"></div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-xl-6 mb-6">
              <label>Rol</label>
              <select id="slcChangeRole-AccountRole" class="form-control" name="role">
                <option disabled>Seleccione</option>
              </select>
              <div class="invalid-feedback"></div>
            </div>

            <div class="form-group col-xl-6 mb-6">
              <label>Estado</label>
              <select id="slcChangeRole-AccountState" class="form-control" name="state">
                <option disabled>Seleccione</option>
                <option value="A">Activo</option>
                <option value="I">Inactivo</option>
              </select>
              <div class="invalid-feedback"></div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button id="btnSaveRole" type="button" class="btn btn-primary">Guardar</button>
        <button id="btnCloseChangeRoleModal" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>

<div id="confirmDeleteModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title w-100 text-center">Aviso</h5>
      </div>
      <div class="modal-body">
        <div class="text-center">
          <p>¿Eliminar este usuario?</p>
          <p class="small">No podrás deshacer esto</p>
        </div>
      </div>
      <div class="modal-footer justify-content-center">
        <button id="btnCancelDelete" type="button" class="btn btn-secondary disabled" data-dismiss="modal">Cancelar</button>
        <button id="btnConfirmDelete" type="button" class="btn btn-primary">Si, Eliminarlo</button>
      </div>
    </div>
  </div>
</div>
